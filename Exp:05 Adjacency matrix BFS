#include <stdio.h>

int main() {
    int a[10][10], q[10], vis[10] = {0};
    int n, i, j, front = 0, rear = -1, v;

    printf("Enter number of vertices: ");
    scanf("%d", &n);
    printf("Enter adjacency matrix:\n");
    for (i = 0; i < n; i++)
        for (j = 0; j < n; j++)
            scanf("%d", &a[i][j]);

    printf("Enter starting vertex: ");
    scanf("%d", &v);

    q[++rear] = v;
    vis[v] = 1;
    printf("BFS: ");

    while (front <= rear) {
        v = q[front++];
        printf("%d ", v);
        for (i = 0; i < n; i++) {
            if (a[v][i] && !vis[i]) {
                q[++rear] = i;
                vis[i] = 1;
            }
        }
    }
    return 0;
}
 

