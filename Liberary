class Library:
    def __init__(self):
        self.books ={}

    def add_book(self,title):
        if title in self.books:
            print(f"{title} is already available in the library")
        else:
            self.books[title] = 0
            print(f"{title} added to the library")
    
    def total_books(self):
        print(f"total num of books : {len(self.books)}")

    def borrow_book(self,title):
        if title in self.books:
            self.books[title] += 1
            print(f"{title} borrowed successfully")
        else:
            print(f"{title} not available in the library")
    
    def least_borrowed(self):
        if not self.books:
            print("no book is available in the library")
        else:
            min_borrowed = min(self.books.values())
            least_borrowed_books = []
            for title,count in self.books.items():
                if count == min_borrowed:
                    least_borrowed_books.append(title)
            print(f"least borrowed books : {least_borrowed_books} with borrow count : {min_borrowed}")
    
    def most_borrowed(self):
        if not self.books:
            print("no book is available in the library")
        else:
            max_borrowed = max(self.books.values())
            most_borrowed_books = []
            for title,count in self.books.items():
                if count == max_borrowed:
                    most_borrowed_books.append(title)
            print(f"most borrowed books : {most_borrowed_books} with borrow count : {max_borrowed}")
    
    def never_borrowed(self):
        if not self.books:
            print("no book available in the library")
        else:
            never_borrowed_books = []
            for title,count in self.books.items():
                if count == 0:
                    never_borrowed_books.append(title)
            print(f"never borrowed books : {never_borrowed_books}")

lib = Library()

lib.total_books()
lib.add_book("A")
lib.add_book("B")
lib.add_book("C")
lib.total_books()
lib.borrow_book("A")
lib.borrow_book("A")
lib.borrow_book("B")
lib.most_borrowed()
lib.least_borrowed()
lib.never_borrowed()
